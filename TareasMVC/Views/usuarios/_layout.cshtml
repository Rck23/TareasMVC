@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TareasMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TareasMVC.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://bootswatch.com/5/sketchy/bootstrap.min.css">

</head>
<body style="margin:0;">
     
    <div style="display:flex; justify-content:center; align-items:center; height:100vh">
        
        <main role="main" class="pb-3 m-2">
            <h1>@localizer["Display.tituloInicio"]</h1>
            <h4>@localizer["Display.textoInicio"]</h4>
            @RenderBody()
        </main>

       

       
    </div>

    <footer class=" footer bg-light ">
        <div class="container  text-secondary text-muted text-center ">
            &copy; 2023 - TareasMVC
        </div>
        <div class="container  text-secondary text-muted  text-center mb-1">
            Desarrollado por  <span class="text-danger">&hearts;</span> Ulises Martínez

        </div>
      
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
